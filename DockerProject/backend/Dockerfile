FROM node:14-alpine
# Собираем приложение на основе образа node:14-alpine
WORKDIR /app
# Задаем рабочий каталог для приложения
COPY package*.json ./
#Копируем файлы с зависимостями в рабочую папрку
RUN npm install
#Запукаем npm, устанавливаем зависимости
COPY ./ ./
#Копируем файлы в рабочую папку
ENV PORT='3000'
ENV HOST='0.0.0.0'

EXPOSE 3000

CMD [ "npm", "start" ]
#Команда для запука контейнера